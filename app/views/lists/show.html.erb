<div class="container">
  <h1 class="display-3"><%= @list.name %></h1>

  <div class="row">
    <% @list.movies.each do |movie| %>
      <div class="col-sm">
        <%= image_tag movie.poster_url, width: 300, height: 400%>
        <%= movie.title %>
        <%= movie.overview %>
          <div class="my-4">
            <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
            <%= bookmark.comment %>
          </div>
      </div>
    <% end %>
  </div>

  <div class="buttons-list my-2">
    <%= link_to 'Add movie', new_list_bookmark_path(@list), class:"btn btn-primary" %>
    <%= link_to "delete this list", list_path(@list), class: "btn btn-primary", data: { turbo_method: :delete, turbo_confirm: "Confirm" } %>
    <%= link_to 'Back to lists', lists_path, class: 'btn btn-primary' %>
  </div>
</div>
